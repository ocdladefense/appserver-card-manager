{
	"comment": "This is an authorize.net customer payment profile manager.",
	"name": "payment-profile-manager", 
	"description": "A module for allowing users to manage their saved payment profiles.",
    "connectedApp":"default",
	"files": [
        "AuthNetRequest.php",
        "AuthNetResponse.php",
        "AuthNetClient.php",
        "PaymentProfile.php",
        "PaymentProfileEx.php",
        "CustomerAddress.php",
        "MerchantAuthentication.php",
        "PaymentProfileException.php"
    ],
    "links":[{
        "href":"/cards",
        "label": "Payment Methods",
        "isSublink": false,
        "adminLink": false
    }],
	"routes": {
        "cards":{
            "callback":"list",
            "content-type":"text/html",
            "access": "is_authenticated",
            "authorization": "webserver"
        },
        "card/create":{
            "callback":"edit",
            "content-type":"text/html"
        },
        "card/%id/edit":{
            "callback":"edit",
            "content-type":"text/html"
        },
        "card/save":{
            "callback":"save",
            "content-type":"text/html"
        },
        "card/foobar":{
            "callback":"foobar",
            "content-type":"text/html",
            "access": true
        },
        "card/%id/delete":{
            "callback":"delete",
            "content-type":"text/html"
        },
        "customer/%contactId/save":{
            "callback":"saveCustomer",
            "content-type":"text/html"
        },
        "record/%recordType/edit":{
            "callback":"edit",
            "content-type":"text/html",
            "access": false,
            "authorization": "webserver"
        }
    }
}

